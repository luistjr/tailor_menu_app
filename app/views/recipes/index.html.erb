<% athletic_meal = MealKit.all.select { |r| r.lifestyle_id == 1}%>
<% healthy_meal = MealKit.all.select { |r| r.lifestyle_id == 2}%>
<% foodie_meal = MealKit.all.select { |r| r.lifestyle_id == 3}%>
<% hungry_meal = MealKit.all.select { |r| r.lifestyle_id == 4} %>


<% @current_user.current_recipe_list.each do |r| %>
<center><ul>
    <li><b><%= r.title %></b></li>
    <li>Ready in <%= r.ready_in_minutes %> minutes</li>     
    <li><%= link_to "Full Recipe", r.source_url, target: "_blank" %></li> 
    <br>    
    <li><img src="<%= r.image %>" alt="<%= r.title %>"%></li>
    <br>
    <br>
    <li> <%= sanitize r.summary %></li>
    <br>
    <br>
</ul>
</center>
<% end %>